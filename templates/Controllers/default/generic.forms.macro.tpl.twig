<!-- input_with_form_group -->
{% macro input_with_form_group(id, type = "text", name, placeholder, icon, label, data_rule_required="true", data_msg_required="This field is a required field!", data_rule_equalTo, data_rule_email, class="form-control", autofocus="autofocus") %}
    <div class="form-group">
        {% if label != false %}
            <label for="{{ id }}">{{ label }}:</label>
        {% endif %}
        <div class="input-icon">
            {% if icon != false %}
                <i class="{{ icon }}"></i>
            {% endif %}
            <input id="{{ id }}" type="{{ type }}" name="{{ name }}" placeholder="{% trans placeholder %}" class="{{ class }}" autofocus="{{ autofocus }}" data-rule-required="{{ data_rule_required }}" {% if data_rule_equalTo != false %}data-rule-equalTo="#{{ data_rule_equalTo }}"{% endif %} {% if data_rule_required != false %}data-msg-required="{% trans data_msg_required %}"{% endif %} {% if data_rule_email != false %}data-rule-email="{{ data_rule_email }}"{% endif %}/>
        </div>
    </div>
{% endmacro %}

