extends /_layout/default.pug

block styles
  link(href='vendors/@fullcalendar/css/main.css', rel='stylesheet')
  link(href='node_modules/@fullcalendar/daygrid/main.css', rel='stylesheet')

block scripts
  // Plugins and scripts required by this view
  script(src='node_modules/jquery/dist/jquery.slim.min.js')
  script(src='node_modules/moment/min/moment.min.js')
  script(src='node_modules/@fullcalendar/core/main.js')
  script(src='node_modules/@fullcalendar/daygrid/main.js')
  script(src='js/calendar.js')

block view
  .fade-in
    .card
      .card-header
        |  FullCalendar
        a.badge.badge-danger(href='https://coreui.io/pro/') CoreUI Pro Component
        .card-header-actions
          a.card-header-action(href='https://fullcalendar.io', target='_blank')
            small.text-muted docs
      .card-body
        #calendar
